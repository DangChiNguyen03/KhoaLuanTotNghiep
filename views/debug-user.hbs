<div class="container mt-5">
    <h1>üîç Debug User Info</h1>
    
    <div class="card mt-4">
        <div class="card-header bg-info text-white">
            <h3>User Object</h3>
        </div>
        <div class="card-body">
            <pre style="background: #f5f5f5; padding: 20px; border-radius: 5px; overflow: auto;">{{json user}}</pre>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header bg-warning">
            <h3>Role Check Results</h3>
        </div>
        <div class="card-body">
            <table class="table">
                <tr>
                    <th>user.role value:</th>
                    <td><code>{{user.role}}</code></td>
                </tr>
                <tr>
                    <th>Is admin?</th>
                    <td>{{#if (eq user.role 'admin')}}‚úÖ YES{{else}}‚ùå NO{{/if}}</td>
                </tr>
                <tr>
                    <th>Is manager?</th>
                    <td>{{#if (eq user.role 'manager')}}‚úÖ YES{{else}}‚ùå NO{{/if}}</td>
                </tr>
                <tr>
                    <th>Is staff?</th>
                    <td>{{#if (eq user.role 'staff')}}‚úÖ YES{{else}}‚ùå NO{{/if}}</td>
                </tr>
                <tr>
                    <th>Should show admin menu?</th>
                    <td>{{#if (or (eq user.role 'admin') (eq user.role 'manager') (eq user.role 'staff'))}}‚úÖ YES - Menu should appear!{{else}}‚ùå NO{{/if}}</td>
                </tr>
            </table>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header bg-success text-white">
            <h3>Test Links</h3>
        </div>
        <div class="card-body">
            <a href="/admin/dashboard" class="btn btn-primary">Try Admin Dashboard</a>
            <a href="/" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</div>
