{{!< layouts/main}}

<!-- HERO CAROUSEL -->
<section class="hero-section mb-5 p-0 container-fluid">
  <div id="heroCarousel"
       class="carousel slide carousel-fade"
       data-bs-ride="carousel"
       data-bs-interval="5000"
       data-bs-touch="true"
       data-bs-pause="false">

    <!-- Indicators -->
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
      <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
    </div>

    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/images/event/giamGiaCf.jpg" class="d-block w-100 hero-slide-img" alt="Chương trình freeship – slide 1">
        <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
          <a href="/products" class="btn btn-primary btn-lg">Xem đồ uống</a>
        </div>
      </div>
      <div class="carousel-item">
        <img src="/images/event/giamGiaTraSua.jpg" class="d-block w-100 hero-slide-img" alt="Chương trình freeship – slide 2">
        <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
          <a href="/products" class="btn btn-primary btn-lg">Xem đồ uống</a>
        </div>
      </div>
      <div class="carousel-item">
        <img src="/images/event/giamGiaTraTraiCay.jpg" class="d-block w-100 hero-slide-img" alt="Chương trình freeship – slide 3">
        <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
          <a href="/products" class="btn btn-primary btn-lg">Xem đồ uống</a>
        </div>
      </div>
      <div class="carousel-item">
        <img src="/images/event/dongGiaCuoiTuan.jpg" class="d-block w-100 hero-slide-img" alt="Chương trình freeship – slide 4">
        <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
          <a href="/products" class="btn btn-primary btn-lg">Xem đồ uống</a>
        </div>
      </div>
    </div>

    <!-- Prev/Next controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
  </div>
</section>

<!-- FEATURED PRODUCTS -->
<section class="featured-products mb-5 container">
  <h2 class="text-center mb-4">{{featuredTitle}}</h2>
  {{#if products.length}}
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">
      {{#each products}}
      <div class="col">
        <div class="card h-100 shadow-sm product-card">
          <div class="ratio ratio-4x3 bg-light">
            <img src="{{image}}" class="card-img-top object-fit-cover p-2" alt="{{name}}"
                 loading="lazy" onerror="this.src='/images/placeholder.png'">
          </div>
          <div class="card-body d-flex flex-column p-3">
            <h6 class="card-title mb-2 fw-bold text-truncate">{{name}}</h6>
            <p class="card-text text-muted small mb-2 truncate-2-lines">{{description}}</p>
            <p class="card-text fw-bold text-primary mb-2">
              {{#if price}}
                {{formatPrice price}}
              {{else if sizes}}
                {{#if (eq category 'Topping')}}
                  {{formatPrice sizes.[0].price}}
                {{else}}
                  Từ {{formatPrice sizes.[0].price}}
                {{/if}}
              {{else}}
                Liên hệ
              {{/if}}
            </p>
            <div class="mt-auto">
              <a href="/products#product-{{_id}}" class="btn btn-primary btn-sm w-100">Xem thêm</a>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-info text-center">
      <i class="fas fa-info-circle me-2"></i>Chưa có sản phẩm nào.
    </div>
  {{/if}}
</section>

<!-- Page-scoped style to ensure interactivity & good UX -->
<style>
  .hero-slide-img {
    width: 100%;
    height: 420px;
    object-position: center;
    transition: opacity .8s ease-in-out;
    user-select: none;
  }

  .carousel-caption {
    top: 50%;
    transform: translateY(-50%);
    bottom: auto;
    pointer-events: none;
  }

  .carousel-caption .btn { pointer-events: auto; }
  .carousel-control-prev, .carousel-control-next { z-index: 10; }
  .carousel-indicators { z-index: 10; }
  .carousel-inner { position: relative; z-index: 1; }

  @media (max-width: 767.98px) {
    .hero-slide-img { height: 300px; }
  }

  /* Product Cards */
  .product-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border-radius: 12px;
    overflow: hidden;
  }

  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.15) !important;
  }

  .product-card .card-body {
    min-height: 180px;
  }

  .product-card .card-title {
    font-size: 0.95rem;
    line-height: 1.3;
    height: 2.6em;
    overflow: hidden;
  }

  .product-card .card-text.small {
    font-size: 0.8rem;
    line-height: 1.4;
  }

  .truncate-2-lines {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    min-height: 2.8em;
  }

  .product-card img {
    transition: transform 0.3s ease;
  }

  .product-card:hover img {
    transform: scale(1.05);
  }

  .carousel-control-prev,
  .carousel-control-next {
    width: 50px;
    height: 50px;
    top: 50%;
    transform: translateY(-50%);
  }

  .carousel-control-prev {
    left: 60px;
  }

  .carousel-control-next {
    right: 60px;
  }

  .carousel-control-prev-icon,
  .carousel-control-next-icon {
    width: 40px;
    height: 40px;
  }

  /* Responsive adjustments */
  @media (max-width: 991.98px) {
    .product-card .card-body {
      min-height: 160px;
    }
  }

  @media (max-width: 767.98px) {
    .product-card .card-body {
      min-height: 140px;
    }
    .product-card .card-title {
      font-size: 0.9rem;
    }
  }
</style>
