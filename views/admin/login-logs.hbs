{{#section 'title'}}{{title}}{{/section}}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-shield-alt me-2"></i>{{title}}</h2>
                <div>
                    <!-- Auto cleanup runs every 24 hours -->
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>{{stats.success}}</h4>
                                    <p class="mb-0">Đăng nhập thành công</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-check-circle fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-danger text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>{{stats.failed}}</h4>
                                    <p class="mb-0">Đăng nhập thất bại</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-times-circle fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>{{#if suspiciousLogs.length}}{{suspiciousLogs.length}}{{else}}0{{/if}}</h4>
                                    <p class="mb-0">Hoạt động đáng ngờ (24h)</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-exclamation-triangle fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>{{totalLogs}}</h4>
                                    <p class="mb-0">Tổng số log</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-list fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filters -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Bộ lọc</h5>
                </div>
                <div class="card-body">
                    <form method="GET" action="/admin/login-logs">
                        <div class="row">
                            <div class="col-md-2">
                                <label class="form-label">Trạng thái</label>
                                <select class="form-select" name="status">
                                    <option value="">Tất cả</option>
                                    <option value="success" {{#if (eq filters.status 'success')}}selected{{/if}}>Thành công</option>
                                    <option value="failed" {{#if (eq filters.status 'failed')}}selected{{/if}}>Thất bại</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Mức độ rủi ro</label>
                                <select class="form-select" name="risk">
                                    <option value="">Tất cả</option>
                                    <option value="low" {{#if (eq filters.risk 'low')}}selected{{/if}}>Thấp</option>
                                    <option value="medium" {{#if (eq filters.risk 'medium')}}selected{{/if}}>Trung bình</option>
                                    <option value="high" {{#if (eq filters.risk 'high')}}selected{{/if}}>Cao</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Người dùng</label>
                                <input type="text" class="form-control" name="user" value="{{filters.user}}" placeholder="Tên hoặc email">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">IP Address</label>
                                <input type="text" class="form-control" name="ipAddress" value="{{filters.ipAddress}}" placeholder="192.168.1.1">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Từ ngày</label>
                                <input type="date" class="form-control" name="dateFrom" value="{{filters.dateFrom}}">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Đến ngày</label>
                                <input type="date" class="form-control" name="dateTo" value="{{filters.dateTo}}">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-search me-1"></i>Lọc
                                </button>
                                <a href="/admin/login-logs/export{{#if filters.status}}?status={{filters.status}}{{/if}}" class="btn btn-success me-2">
                                    <i class="fas fa-file-csv me-1"></i>Export CSV
                                </a>
                                <a href="/admin/login-logs" class="btn btn-outline-secondary">
                                    <i class="fas fa-undo me-1"></i>Xóa bộ lọc
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Login Logs Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i>Lịch sử đăng nhập</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Thời gian</th>
                                    <th>Người dùng</th>
                                    <th>IP Address</th>
                                    <th>Thiết bị</th>
                                    <th>Trạng thái</th>
                                    <th>Mức độ rủi ro</th>
                                    <th>Session</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each loginLogs}}
                                <tr>
                                    <td>
                                        <small>
                                            {{formatDateTime this.loginTime}}
                                            {{#if this.logoutTime}}
                                                <br><span class="text-muted">Logout: {{formatTime this.logoutTime}}</span>
                                            {{/if}}
                                        </small>
                                    </td>
                                    <td>
                                        {{#if this.user}}
                                            <strong>{{this.user.name}}</strong><br>
                                            <small class="text-muted">{{this.user.email}}</small>
                                            {{#if (eq this.user.role 'admin')}}
                                                <span class="badge bg-danger ms-1">Admin</span>
                                            {{/if}}
                                        {{else}}
                                            <span class="text-muted">{{this.username}}</span>
                                        {{/if}}
                                    </td>
                                    <td>
                                        <code>{{this.ipAddress}}</code>
                                    </td>
                                    <td>
                                        <small>
                                            {{#if this.deviceInfo.browser}}
                                                <i class="fas fa-globe me-1"></i>{{this.deviceInfo.browser}}<br>
                                            {{/if}}
                                            {{#if this.deviceInfo.os}}
                                                <span class="text-muted">{{this.deviceInfo.os}}</span>
                                            {{/if}}
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge {{#if (eq this.loginStatus 'success')}}bg-success{{else}}bg-danger{{/if}}">
                                            {{#if (eq this.loginStatus 'success')}}
                                                <i class="fas fa-check me-1"></i>Thành công
                                            {{else}}
                                                <i class="fas fa-times me-1"></i>Thất bại
                                            {{/if}}
                                        </span>
                                        {{#if this.failureReason}}
                                            <br><small class="text-muted">{{this.failureReason}}</small>
                                        {{/if}}
                                    </td>
                                    <td>
                                        <span class="badge 
                                            {{#if (eq this.riskLevel 'low')}}bg-success
                                            {{else if (eq this.riskLevel 'medium')}}bg-warning
                                            {{else}}bg-danger{{/if}}">
                                            {{#if (eq this.riskLevel 'low')}}Thấp
                                            {{else if (eq this.riskLevel 'medium')}}Trung bình
                                            {{else}}Cao{{/if}}
                                        </span>
                                    </td>
                                    <td>
                                        {{#if this.isActive}}
                                            <span class="badge bg-success">Đang hoạt động</span>
                                        {{else}}
                                            <span class="badge bg-secondary">Đã kết thúc</span>
                                            {{#if this.sessionDurationFormatted}}
                                                <br><small class="text-muted">{{this.sessionDurationFormatted}}</small>
                                            {{/if}}
                                        {{/if}}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-warning" 
                                                    onclick="markRisk('{{this._id}}')" title="Đánh dấu rủi ro">
                                                <i class="fas fa-flag"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-info" 
                                                    onclick="viewDetails('{{this._id}}')" title="Xem chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    {{#if totalPages}}
                    <nav aria-label="Login logs pagination">
                        <ul class="pagination justify-content-center">
                            {{#if prevPage}}
                                <li class="page-item">
                                    <a class="page-link" href="?page={{prevPage}}">Trước</a>
                                </li>
                            {{/if}}
                            
                            <li class="page-item active">
                                <span class="page-link">{{currentPage}}</span>
                            </li>
                            
                            {{#if nextPage}}
                                <li class="page-item">
                                    <a class="page-link" href="?page={{nextPage}}">Sau</a>
                                </li>
                            {{/if}}
                        </ul>
                    </nav>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Risk Level Modal -->
<div class="modal fade" id="riskModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Đánh dấu mức độ rủi ro</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="riskForm" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Mức độ rủi ro:</label>
                        <select class="form-select" name="riskLevel" required>
                            <option value="low">Thấp</option>
                            <option value="medium">Trung bình</option>
                            <option value="high">Cao</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ghi chú:</label>
                        <textarea class="form-control" name="notes" rows="3" placeholder="Lý do đánh dấu..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-warning">Cập nhật</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function markRisk(logId) {
    const form = document.getElementById('riskForm');
    form.action = `/admin/login-logs/${logId}/mark-risk`;
    
    const modal = new bootstrap.Modal(document.getElementById('riskModal'));
    modal.show();
}

function viewDetails(logId) {
    // Có thể implement modal xem chi tiết log sau
    alert('Tính năng xem chi tiết sẽ được thêm sau');
}

// Auto refresh every 30 seconds for active monitoring
setInterval(() => {
    if (window.location.pathname === '/admin/login-logs') {
        // Only refresh if no modals are open
        if (!document.querySelector('.modal.show')) {
            window.location.reload();
        }
    }
}, 30000);
</script>
