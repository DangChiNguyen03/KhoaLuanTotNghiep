{{#section 'title'}}{{title}}{{/section}}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-box me-2"></i>{{title}}</h2>
                <div>
                    <div class="btn-group" role="group">
                        <a href="?{{#each filters}}{{@key}}={{this}}&{{/each}}exportFormat=json" class="btn btn-outline-primary">
                            <i class="fas fa-download me-1"></i>Export JSON
                        </a>
                        <a href="?{{#each filters}}{{@key}}={{this}}&{{/each}}exportFormat=csv" class="btn btn-outline-success">
                            <i class="fas fa-file-csv me-1"></i>Export CSV
                        </a>
                    </div>
                </div>
            </div>

            <!-- Filters -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Bộ lọc báo cáo</h5>
                </div>
                <div class="card-body">
                    <form method="GET" action="/admin/reports/products">
                        <div class="row">
                            <div class="col-md-3">
                                <label class="form-label">Từ ngày</label>
                                <input type="date" class="form-control" name="startDate" value="{{formatDateInput dateRange.startDate}}">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Đến ngày</label>
                                <input type="date" class="form-control" name="endDate" value="{{formatDateInput dateRange.endDate}}">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Danh mục</label>
                                <select class="form-select" name="category">
                                    <option value="">Tất cả</option>
                                    {{#each allCategories}}
                                        <option value="{{this}}" {{#if (eq ../filters.category this)}}selected{{/if}}>{{this}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-md-3 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-sync me-1"></i>Cập nhật
                                </button>
                                <a href="/admin/reports/products" class="btn btn-outline-secondary">
                                    <i class="fas fa-undo"></i>
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>{{statistics.totalProductsSold}}</h4>
                                    <p class="mb-0">Sản phẩm đã bán</p>
                                    <small>{{formatDate dateRange.startDate}} - {{formatDate dateRange.endDate}}</small>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-shopping-cart fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>{{formatCurrency statistics.totalRevenue}}</h4>
                                    <p class="mb-0">Doanh thu sản phẩm</p>
                                    <small>Từ {{statistics.totalOrders}} đơn hàng</small>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-money-bill-wave fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>{{statistics.uniqueProductCount}}</h4>
                                    <p class="mb-0">Sản phẩm khác nhau</p>
                                    <small>Được bán trong kỳ</small>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-layer-group fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>{{formatCurrency statistics.avgRevenuePerOrder}}</h4>
                                    <p class="mb-0">TB doanh thu/đơn</p>
                                    <small>Giá trị trung bình</small>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-calculator fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts Overview Section -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Doanh thu theo danh mục</h5>
                        </div>
                        <div class="card-body">
                            {{#if categoryRevenue}}
                            <!-- Category Revenue Bar Chart -->
                            <div class="category-bar-chart-container">
                                {{#each categoryRevenue}}
                                <div class="category-bar-item mb-3" data-revenue="{{this.totalRevenue}}" data-total="{{../totalCategoryRevenue}}">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <div class="d-flex align-items-center">
                                            <div class="category-color-indicator category-color-{{@index}} me-2"></div>
                                            <span class="fw-bold">{{this._id}}</span>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-success">{{formatCurrency this.totalRevenue}}</span><br>
                                            <small class="text-muted">{{round this.percentage 1}}%</small>
                                        </div>
                                    </div>
                                    <div class="progress" style="height: 25px;">
                                        <div class="progress-bar category-progress-{{@index}}" role="progressbar" 
                                             style="width: {{this.percentage}}%">
                                            <span class="progress-text">{{this.totalQuantity}} món</span>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                            {{else}}
                            <div class="text-center text-muted py-4">
                                <i class="fas fa-chart-bar fa-3x mb-3"></i><br>
                                Không có dữ liệu
                            </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Top 5 sản phẩm bán chạy</h5>
                        </div>
                        <div class="card-body">
                            <div class="bar-chart-container">
                                {{#each top5Products}}
                                <div class="bar-item mb-3" data-quantity="{{this.totalQuantity}}" data-total="{{../totalQuantityTop5}}">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <div class="d-flex align-items-center">
                                            {{#if this.productImage}}
                                            <img src="{{this.productImage}}" alt="{{this.productName}}" 
                                                 class="rounded me-2" style="width: 30px; height: 30px; object-fit: cover;">
                                            {{/if}}
                                            <span class="fw-bold">{{this.productName}}</span>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-primary">{{this.totalQuantity}} món</span><br>
                                            <small class="text-muted percentage-text">{{round this.percentage 1}}%</small>
                                        </div>
                                    </div>
                                    <div class="progress" style="height: 25px;">
                                        <div class="progress-bar bg-gradient" role="progressbar" 
                                             style="width: {{this.percentage}}%">
                                            <span class="progress-text">{{formatCurrency this.totalRevenue}}</span>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                                {{#unless top5Products}}
                                <div class="text-center text-muted py-4">
                                    <i class="fas fa-chart-bar fa-3x mb-3"></i><br>
                                    Không có dữ liệu
                                </div>
                                {{/unless}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Best Selling Products Table -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-star me-2"></i>Top 20 Sản phẩm bán chạy nhất</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>#</th>
                                    <th>Sản phẩm</th>
                                    <th>Danh mục</th>
                                    <th>Đã bán</th>
                                    <th>Doanh thu</th>
                                    <th>Số đơn</th>
                                    <th>Giá TB</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each bestSellingProducts}}
                                <tr>
                                    <td><strong>{{add @index 1}}</strong></td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            {{#if this.productImage}}
                                                <img src="{{this.productImage}}" alt="{{this.productName}}" 
                                                     class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                            {{/if}}
                                            <div>
                                                <strong>{{this.productName}}</strong>
                                                {{#if (gt this.totalQuantity 100)}}
                                                    <span class="badge bg-warning ms-1">Hot</span>
                                                {{/if}}
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">{{this.productCategory}}</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">{{this.totalQuantity}} món</span>
                                    </td>
                                    <td>
                                        <strong class="text-success">{{formatCurrency this.totalRevenue}}</strong>
                                    </td>
                                    <td>
                                        <span class="text-info">{{this.orderCount}} đơn</span>
                                    </td>
                                    <td>
                                        <span class="text-muted">{{formatCurrency this.avgPrice}}</span>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

<!-- Simple Charts - No JavaScript needed! -->

{{#section 'styles'}}
<style>
.card {
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
}

.table th {
    border-top: none;
}

.progress {
    border-radius: 0.5rem;
}

.card-img-top {
    border-radius: 0.375rem 0.375rem 0 0;
}

/* CSS Charts */
.category-bar-chart-container {
    padding: 10px 0;
}

.category-bar-item {
    margin-bottom: 15px;
}

.category-color-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
}

.category-color-0 { background: #FF6384; }
.category-color-1 { background: #36A2EB; }
.category-color-2 { background: #FFCE56; }
.category-color-3 { background: #4BC0C0; }

.category-progress-0 { background: linear-gradient(45deg, #FF6384, #FF8FA3) !important; }
.category-progress-1 { background: linear-gradient(45deg, #36A2EB, #54B4F0) !important; }
.category-progress-2 { background: linear-gradient(45deg, #FFCE56, #FFD93D) !important; }
.category-progress-3 { background: linear-gradient(45deg, #4BC0C0, #6ECFCF) !important; }

.bar-chart-container {
    padding: 10px 0;
}

.bar-item .progress-bar {
    transition: width 1.5s ease-in-out;
    font-size: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    position: relative;
}

.bar-item .progress-bar.bg-gradient {
    background: linear-gradient(45deg, #007bff, #0056b3) !important;
}

.progress-text {
    position: absolute;
    width: 100%;
    text-align: center;
}

.percentage-text {
    font-weight: bold;
    color: #007bff !important;
}
</style>
{{/section}}

